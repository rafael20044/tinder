<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:orientation="vertical"
  android:padding="8dp">

  <!-- Mensaje del otro usuario -->
  <LinearLayout
    android:id="@+id/otherMessageLayout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginEnd="80dp"
    android:visibility="gone">

    <TextView
      android:id="@+id/otherMessageText"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:background="@drawable/message_other_background"
      android:padding="12dp"
      android:text="Message from other user"
      android:textColor="@color/tinder_dark_gray"
      android:textSize="16sp"
      android:maxWidth="280dp" />

    <TextView
      android:id="@+id/otherMessageTime"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="10:30 AM"
      android:textSize="12sp"
      android:textColor="@color/tinder_gray"
      android:gravity="bottom"
      android:padding="8dp" />

  </LinearLayout>

  <!-- Mi mensaje -->
  <LinearLayout
    android:id="@+id/myMessageLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="end"
    android:layout_marginStart="80dp"
    android:visibility="gone">

    <TextView
      android:id="@+id/myMessageTime"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="10:30 AM"
      android:textSize="12sp"
      android:textColor="@color/tinder_gray"
      android:gravity="bottom"
      android:padding="8dp" />

    <TextView
      android:id="@+id/myMessageText"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:background="@drawable/message_my_background"
      android:padding="12dp"
      android:text="My message"
      android:textColor="@color/tinder_white"
      android:textSize="16sp"
      android:maxWidth="280dp" />

  </LinearLayout>

</LinearLayout>
